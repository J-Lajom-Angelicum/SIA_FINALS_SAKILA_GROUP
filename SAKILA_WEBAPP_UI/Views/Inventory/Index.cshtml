@model List<SAKILA_WEBAPP_UI.Models.Inventory>

@{
    ViewData["Title"] = "Inventory";
}

<h2 class="text-center mb-4" style="color:#e50914;">Inventory Overview</h2>

<div class="container">
    <table class="table table-striped table-bordered text-center" style="background-color:#1c1c1c; color:white;">
        <thead style="background-color:#111; color:#e50914;">
            <tr>
                <th>Inventory ID</th>
                <th>Film Title</th>
                <th>Rental Duration</th>
                <th>Rental Rate</th>
                <th>Replacement Cost</th>
                <th>Rental Date</th>
                <th>Return Date</th>
                <th>Customer</th>
                <th>Staff</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inv in Model)
            {
                <tr>
                    <td>@inv.inventoryId</td>
                    <td>@inv.title ?? "-"</td>
                    <td>@inv.rentalDuration</td>
                    <td>@inv.rentalRate.ToString("C")</td>
                    <td>@inv.replacementCost.ToString("C")</td>
                    <td>@(inv.rentalDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(inv.returnDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(string.IsNullOrEmpty(inv.customerName) ? "-" : inv.customerName)</td>
                    <td>@(string.IsNullOrEmpty(inv.staffName) ? "-" : inv.staffName)</td>
                    <td>
                        @if (inv.isRented)
                        {
                            <span class="badge bg-danger">Rented</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Available</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

