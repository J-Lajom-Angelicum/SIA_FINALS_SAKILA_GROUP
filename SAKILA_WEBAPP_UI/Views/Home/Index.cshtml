@{
    ViewData["Title"] = "Home";
}

<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #111;">
    <div class="container">
        <a class="navbar-brand" href="#">Sakila Rentals</a>
    </div>
</nav>

<div class="container text-center mt-5">
    <img src="~/Images/srlogo.png" alt="Sakila Logo" style="height:200px;" /><br/> <br/>
    <h2 class="mb-5">Welcome to Sakila Rentals. <br/> Feel Free to Choose a Service:</h2>

    <div class="row justify-content-center mb-4 g-3">
        <!-- Top row: 3 buttons -->
        <div class="col-6 col-md-2">
            <a asp-controller="Film" asp-action="Index" class="btn btn-module">1. Film</a>
        </div>
        <div class="col-6 col-md-2">
            <a asp-controller="Rental" asp-action="Index" class="btn btn-module">2. Rental</a>
        </div>
        <div class="col-6 col-md-2">
            <a asp-controller="Inventory" asp-action="Index" class="btn btn-module">3. Inventory</a>
        </div>
    </div>

    <div class="row justify-content-center g-3">
        <!-- Bottom row: 3 buttons -->
        <div class="col-6 col-md-2">
            <a asp-controller="Customer" asp-action="Index" class="btn btn-module">4. Customers</a>
        </div>
        <div class="col-6 col-md-2">
            <a asp-controller="Staff" asp-action="Index" class="btn btn-module">5. Staff</a>
        </div>
        <div class="col-6 col-md-2">
            <a asp-controller="Payment" asp-action="Index" class="btn btn-module">6. Payment</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #111; /* Netflix-style black */
        color: #fff;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    h2 {
        color: #e50914; /* Netflix red */
        font-weight: 500;
    }

    /* Buttons */
    .btn-module {
        display: block;
        width: 160px; /* fixed width for more square shape */
        height: 160px; /* fixed height for square */
        font-size: 1.2rem; /* slightly bigger text */
        font-weight: 600;
        color: #fff;
        background-color: #e50914;
        border: none;
        border-radius: 8px; /* slightly rounded corners */
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex; /* center text */
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        /* Hover effect */
        .btn-module:hover {
            background-color: #b00610;
            color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    /* Responsive spacing */
    media (max-width: 576px) {
        .btn-module

    {
        width: 100px;
        height: 100px;
        font-size: 1rem;
    }

    }
    }
</style>
