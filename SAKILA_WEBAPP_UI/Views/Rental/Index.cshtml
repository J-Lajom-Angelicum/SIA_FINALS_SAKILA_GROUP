@model List<SAKILA_WEBAPP_UI.Models.Rental>

@{
    ViewData["Title"] = "Rentals";
    var currentSortColumn = ViewData["CurrentSortColumn"] as string ?? "rentalDate";
    var currentSortDirection = ViewData["CurrentSortDirection"] as string ?? "asc";
}

<h2>Rentals</h2>

<!-- Search Bar -->
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by film or customer..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortColumn="filmTitle"
                   asp-route-sortDirection="@(currentSortColumn == "filmTitle" && currentSortDirection == "asc" ? "desc" : "asc")">
                    Film Title
                </a>
            </th>
            <th>Rental Duration</th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="rentalRate"
                   asp-route-sortDirection="@(currentSortColumn == "rentalRate" && currentSortDirection == "asc" ? "desc" : "asc")">
                    Rental Rate
                </a>
            </th>
            <th>Replacement Cost</th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="rentalDate"
                   asp-route-sortDirection="@(currentSortColumn == "rentalDate" && currentSortDirection == "asc" ? "desc" : "asc")">
                    Rental Date
                </a>
            </th>
            <th>Return Date</th>
            <th>Customer Name</th>
            <th>Staff Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.filmTitle</td>
                <td>@rental.rentalDuration</td>
                <td>@rental.rentalRate.ToString("C")</td>
                <td>@rental.replacementCost.ToString("C")</td>
                <td>@rental.rentalDate.ToString("yyyy-MM-dd")</td>
                <td>@rental.returnDate?.ToString("yyyy-MM-dd")</td>
                <td>@rental.customerName</td>
                <td>@rental.staffName</td>
            </tr>
        }
    </tbody>
</table>
