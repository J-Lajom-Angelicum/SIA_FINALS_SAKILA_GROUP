@model List<SAKILA_WEBAPP_UI.Models.Rental>

@{
    ViewData["Title"] = "Rentals";
    var currentSortColumn = ViewData["CurrentSortColumn"] as string ?? "rentalDate";
    var currentSortDirection = ViewData["CurrentSortDirection"] as string ?? "asc";
}

<h2>Rentals</h2>

<!-- Search Bar -->
<form method="get" class="mb-3 d-flex justify-content-center">
    <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" class="search-input form-control w-50 me-2" placeholder="Search by film or customer..." />
    <button type="submit" class="btn btn-outline-danger">Search</button>
</form>

<table class="table table-striped table-bordered table-netflix text-center">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortColumn="filmTitle"
                   asp-route-sortDirection="@(currentSortColumn == "filmTitle" && currentSortDirection == "asc" ? "desc" : "asc")">
                    Film Title
                </a>
            </th>
            <th>Rental Duration</th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="rentalRate"
                   asp-route-sortDirection="@(currentSortColumn == "rentalRate" && currentSortDirection == "asc" ? "desc" : "asc")">
                    Rental Rate
                </a>
            </th>
            <th>Replacement Cost</th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="rentalDate"
                   asp-route-sortDirection="@(currentSortColumn == "rentalDate" && currentSortDirection == "asc" ? "desc" : "asc")">
                    Rental Date
                </a>
            </th>
            <th>Return Date</th>
            <th>Customer Name</th>
            <th>Staff Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.Title</td>
                <td>@rental.RentalDuration</td>
                <td>@rental.RentalRate.ToString("C")</td>
                <td>@rental.ReplacementCost.ToString("C")</td>
                <td>@rental.rentalDate.ToString("yyyy-MM-dd")</td>
                <td>@rental.returnDate?.ToString("yyyy-MM-dd")</td>
                <td>@rental.customerName</td>
                <td>@rental.staffName</td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #111;
        color: #fff;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    h2 {
        color: #e50914;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Netflix-style table */
    .table-netflix {
        background-color: #1c1c1c;
        border: none;
    }

        .table-netflix th,
        .table-netflix td {
            border: 1px solid #333;
            vertical-align: middle;
        }

        .table-netflix th {
            background-color: #111;
            color: #e50914;
        }

        .table-netflix td {
            color: #fff;
        }

    /* Buttons */
    .btn-outline-danger {
        border-color: #e50914;
        color: #e50914;
    }

        .btn-outline-danger:hover {
            background-color: #e50914;
            color: #111;
        }

    /* Search Input */
    .search-input {
        background-color: #222;
        border: 1px solid #e50914;
        color: #fff;
    }

        .search-input::placeholder {
            color: #aaa;
        }
</style>
