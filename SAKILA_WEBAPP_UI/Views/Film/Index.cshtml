@model List<Film>

<h2 style="color:white; text-align:center; margin-bottom:30px;">Films</h2>

<!-- Search Bar -->
<form method="get" asp-action="Index" class="d-flex gap-2 mb-3 justify-content-center flex-column flex-sm-row">
    <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" placeholder="Search..." class="form-control w-100 w-sm-50 search-input" />
    <select name="sortOrder" class="form-select w-100 w-sm-25 search-input">
        <option value="">Sort by...</option>
        <option value="title_asc">Title (A → Z)</option>
        <option value="title_desc">Title (Z → A)</option>
        <option value="year_asc">Release Year (Old → New)</option>
        <option value="year_desc">Release Year (New → Old)</option>
        <option value="rating_asc">Rating (Low → High)</option>
        <option value="rating_desc">Rating (High → Low)</option>
    </select>
    <button type="submit" class="btn btn-danger mt-2 mt-sm-0">Apply</button>
</form>

<table class="table table-striped table-bordered table-netflix">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Release Year</th>
            <th>Length</th>
            <th>Rating</th>
            <th>Language</th>
            <th>Special Features</th>
            <th>Category</th>
            <th>Actors</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Title</td>
                <td>@f.Description</td>
                <td>@f.ReleaseYear</td>
                <td>@(f.Length.HasValue? f.Length.Value + " mins" : "-")</td>
                <td>@f.Rating</td>
                <td>@f.LanguageName</td>
                <td>@f.SpecialFeatures</td>
                <td>@(f.Categories.Any() ? string.Join(", ", f.Categories) : "-")</td>
                <td>@(f.Actors.Any() ? string.Join(", ", f.Actors) : "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@f.filmId" class="btn btn-sm btn-outline-light mb-1">Edit</a>
                    <button type="button" class="btn btn-sm btn-outline-danger mb-1" data-bs-toggle="modal" data-bs-target="#deleteModal@f.FilmId">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modals -->
@foreach (var f in Model)
{
    <div class="modal fade" id="deleteModal@f.FilmId" tabindex="-1" aria-labelledby="deleteLabel@f.FilmId" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header border-bottom border-danger">
                    <h5 class="modal-title" id="deleteLabel@f.FilmId">Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete "<strong>@f.Title</strong>"?
                </div>
                <div class="modal-footer border-top border-danger">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                    <a asp-action="Delete" asp-route-id="@f.filmId" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
}

<style>
    body {
        background-color: #111;
        color: #fff;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    h2 {
        color: #e50914;
        text-align: center;
    }

    .table-netflix {
        background-color: #1c1c1c;
        border: 2px solid #fff;
    }

        .table-netflix th, .table-netflix td {
            border: 1px solid #fff;
            text-align: center;
            vertical-align: middle;
            color: #fff;
        }

        .table-netflix th {
            background-color: #111;
            color: #e50914;
        }

    .btn-outline-danger {
        border-color: #e50914;
        color: #e50914;
    }

        .btn-outline-danger:hover {
            background-color: #e50914;
            color: #111;
        }

    .btn-outline-light {
        border-color: #fff;
        color: #fff;
    }

        .btn-outline-light:hover {
            background-color: #fff;
            color: #111;
        }

    .search-input {
        background-color: #222;
        border: 1px solid #e50914;
        color: #fff;
    }

        .search-input::placeholder {
            color: #aaa;
        }
</style>
