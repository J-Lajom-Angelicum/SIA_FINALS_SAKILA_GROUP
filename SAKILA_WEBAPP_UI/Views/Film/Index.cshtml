@model List<Film>

<h2>Films</h2>

<!-- Search Bar with Sorting-->
<form method="get" asp-action="Index" class="d-flex gap-2 mb-3">

    <input type="text"
           name="searchTerm"
           value="@ViewData["CurrentFilter"]"
           placeholder="Search..."
           class="form-control w-50" />

    <select name="sortOrder" class="form-select w-25">
        <option value="">Sort by...</option>
        <option value="title_asc">Title (A → Z)</option>
        <option value="title_desc">Title (Z → A)</option>
        <option value="year_asc">Release Year (Old → New)</option>
        <option value="year_desc">Release Year (New → Old)</option>
        <option value="rating_asc">Rating (Low → High)</option>
        <option value="rating_desc">Rating (High → Low)</option>
    </select>

    <button type="submit" class="btn btn-primary">Apply</button>
</form>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Release Year</th>
            <th>Length</th>
            <th>Rating</th>
            <th>Language</th>
            <th>Category</th>
            <th>Actors</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Title</td>
                <td>@f.Description</td>
                <td>@f.ReleaseYear</td>
                <td>@(f.Length.HasValue? f.Length.Value + " mins" : "-")</td>
                <td>@f.Rating</td>
                <td>@f.LanguageName</td>
                <td>@(f.Categories.Any() ? string.Join(", ", f.Categories) : "-")</td>
                <td>@(f.Actors.Any() ? string.Join(", ", f.Actors) : "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@f.FilmId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@f.FilmId" class="btn btn-sm btn-danger">Delete</a>
                    <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#detailsModal@f.FilmId">
                        Details
                    </button>
                </td>
            </tr>

            <!-- Details Modal -->
            <div class="modal fade" id="detailsModal@f.FilmId" tabindex="-1" aria-labelledby="detailsLabel@f.FilmId" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="detailsLabel@f.FilmId">@f.Title Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p><strong>Rental Duration:</strong> @f.RentalDuration days</p>
                            <p><strong>Rental Rate:</strong> @f.RentalRate</p>
                            <p><strong>Replacement Cost:</strong> @f.ReplacementCost</p>
                            <p><strong>Special Features:</strong> @f.SpecialFeatures</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
